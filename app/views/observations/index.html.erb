<h1>Listing observations</h1>

<table>
  <tr>
    <th>Species</th>
    <th>Weight</th>
    <th>Length</th>
    <th>Site</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @observations.each do |observation| %>
  <tr>
    <td><%= observation.species %></td>
    <td><%= observation.weight %></td>
    <td><%= observation.length %></td>
    <td><%= observation.site_id %></td>
    <td><%= observation.user_id %></td>
    <td><%= link_to 'Show', observation %></td>
    <td><%= link_to 'Edit', edit_observation_path(observation) %></td>
    <td><%= link_to 'Destroy', observation, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

